[Unit]
Description=rapt daemon - R package installation via apt
After=network.target

[Service]
Type=simple
ExecStart=/usr/bin/raptd
Restart=on-failure
RestartSec=5

# Security hardening
# Note: no ProtectSystem â€” apt needs write access to /usr
NoNewPrivileges=false
ProtectHome=read-only
PrivateTmp=true

[Install]
WantedBy=multi-user.target
